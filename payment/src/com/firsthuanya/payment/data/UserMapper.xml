<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.firsthuanya.payment.data.UserMapper">
  <!-- cache / -->   
  <select id="find" parameterType="string" resultType="com.firsthuanya.payment.domain.User">
    select 
		ID as id,
		name as name,
		password as password
	from user_info
    where ID=#{id}
  </select>

  <select id="count" parameterType="map" resultType="int">
    select count(*)
    from user_info
    where ID=#{id} and password=#{password}
  </select>

</mapper>